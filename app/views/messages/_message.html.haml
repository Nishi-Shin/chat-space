
.right-main-contents-upper
  .right-main-contents-upper__name
    = message.user.name
  .right-main-contents-upper__data
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .right-main-contents-upper__message
    - if message.content.present?
      %p.right-main-contents-upper__message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
